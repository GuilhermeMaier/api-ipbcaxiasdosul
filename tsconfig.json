{
  "compilerOptions": {
    "baseUrl": "./",
    "strict": false,
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "noEmitOnError": false
  },
  "exclude": ["node_modules/**", "dist"]
}
